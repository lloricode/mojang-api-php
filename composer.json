{
    "name": "lloricode/mojang-api-php",
    "description": "mojang-api-php",
    "keywords": [
        "lloricode",
        "mojang-api-php",
        "mojang",
        "php",
        "api",
        "minecraft"
    ],
    "homepage": "https://github.com/lloricode/mojang-api-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Lloric Mayuga Garcia",
            "email": "lloricode@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "composer-runtime-api": "^2.0",
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Lloricode\\Mojang\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lloricode\\Mojang\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
